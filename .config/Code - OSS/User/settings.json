{
    "workbench.colorTheme": "One Dark Pro Mix",
    "editor.fontFamily": "Hack, 思源黑体, Twemoji, 'Symbols Nerd Font Mono' , 'Font Awesome 6 Free Regular'",
    "editor.fontSize": 22,
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "workbench.startupEditor": "none",
    "open-in-browser.default": "firefox",
    "vim.autoSwitchInputMethod.defaultIM": "1",
    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/fcitx5-remote -t {im}",
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/fcitx5-remote",
    "vim.autoSwitchInputMethod.enable": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "editor.linkedEditing": true,
    "clangd.arguments": [
        "--enable-config",
        "--log=error"
    ],
    "files.eol": "\n",
    "terminal.external.linuxExec": "konsole",
    "vim.useSystemClipboard": true,
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "xelatex->bibtex->xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdflatex->bibtex->pdflatex*2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "/usr/bin/xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%.tex"
            ]
        },
        {
            "name": "pdflatex",
            "command": "/usr/bin/pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "/usr/bin/bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "lldb.showDisassembly": "never",
    "files.insertFinalNewline": true,
    "notebook.insertFinalNewline": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "vim.smartRelativeLine": true,
    "editor.lineNumbers": "relative",
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.enableHTML5Embed": true,
    "markdown.preview.fontSize": 18,
    "markdown.preview.fontFamily": "Hack, 思源黑体, Twemoji, 'Symbols Nerd Font', 'Font Awesome 6 Free Regular'",
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "terminal.integrated.fontSize": 20,
    "emmet.variables": {
        "lang": "zh-cn"
    },
    "editor.minimap.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "editor.fontLigatures": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "git.autofetch": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.tabWidth": 4,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "editor.stickyScroll.enabled": false
}
